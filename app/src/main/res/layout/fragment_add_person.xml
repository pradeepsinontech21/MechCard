<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_background"
            android:fitsSystemWindows="true"
            android:keepScreenOn="true">

            <ImageView
                android:id="@+id/image_erp_logo"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:src="@drawable/erp_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.camera.view.PreviewView
                android:id="@+id/preview_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintBottom_toTopOf="@+id/control"
                app:layout_constraintTop_toBottomOf="@+id/image_erp_logo" />

            <com.mechcard.utils.face.GraphicOverlay
                android:id="@+id/graphic_overlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/preview_view"
                app:layout_constraintLeft_toLeftOf="@id/preview_view"
                app:layout_constraintRight_toRightOf="@id/preview_view"
                app:layout_constraintTop_toTopOf="@id/preview_view" />

            <ImageView
                android:id="@+id/image_frame_top_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:src="@drawable/ic_face_frame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/preview_view" />

            <ImageView
                android:id="@+id/image_frame_top_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:scaleX="-1"
                android:scaleY="1"
                android:src="@drawable/ic_face_frame"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/preview_view" />

            <ImageView
                android:id="@+id/image_frame_bottom_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_32sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:rotation="180"
                android:src="@drawable/ic_face_frame"
                app:layout_constraintBottom_toBottomOf="@+id/preview_view"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/image_frame_bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_32sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:scaleX="1"
                android:scaleY="-1"
                android:src="@drawable/ic_face_frame"
                app:layout_constraintBottom_toBottomOf="@+id/preview_view"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/text_capture_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Face Recognition"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/_16ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/inter_regular"
                    android:text="Select user data add users face Id and Complete face recognition"
                    android:textColor="@color/text_medium"
                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_capture_face" />

                <LinearLayout
                    android:id="@+id/view_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_message">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/txt_mechanic_supervisor"
                        android:textColor="@color/text_medium"
                        android:textSize="@dimen/_8ssp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/customborder"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvMechanicCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:minEms="3"
                            android:padding="@dimen/_2sdp"
                            android:text=""
                            android:textColor="@color/text_medium"
                            android:textSize="@dimen/_8ssp" />


                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="#8C98AA" />

                        <AutoCompleteTextView
                            android:id="@+id/actMechanicName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:completionThreshold="1"
                            android:drawableEnd="@drawable/chevron_down"
                            android:dropDownAnchor="@id/actMechanicName"
                            android:hint="Select"
                            android:imeOptions="actionDone"
                            android:inputType="none"
                            android:lines="1"
                            android:padding="@dimen/_2sdp"
                            android:textColor="#384152"
                            android:textColorHint="@color/text_medium"
                            android:textSize="@dimen/_8ssp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:visibility="invisible"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_date_time">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Mobile number"
                        android:textColor="@color/text_medium"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_bold"
                        android:padding="@dimen/_2sdp"
                        android:text="+91 8460222222"
                        android:textColor="@color/text_medium"
                        android:textSize="@dimen/_8ssp" />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/text_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableTint="@color/text_light"
                android:padding="@dimen/_8sdp"
                android:text="Back"
                android:textColor="@color/text_light"
                android:textSize="@dimen/_10ssp"
                app:drawableStartCompat="@drawable/ic_arrow_left"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>
