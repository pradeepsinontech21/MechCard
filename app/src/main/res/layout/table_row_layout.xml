<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/table_heading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_1sdp"
        android:background="@drawable/table_border">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_jobid"

                android:maxLines="2"
                android:clickable="true"
                android:maxLength="40"
                android:ellipsize="end"
                style="@style/table_row_item"
                android:minWidth="@dimen/jobid_column_width"
                android:layout_weight="1"
                android:layout_width="@dimen/jobid_column_width"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_vehicleid"
                android:maxLines="2"
                android:maxLength="40"
                android:clickable="true"
                android:ellipsize="end"
                style="@style/table_row_item"
                android:paddingEnd="@dimen/_5sdp"
                android:minWidth="@dimen/vehicleid_column_width"
                android:layout_width="@dimen/vehicleid_column_width"
                android:layout_column="1"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_margin="1dp"
                android:layout_height="@dimen/row_height"
                android:background="@color/white"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_custname"
                style="@style/table_row_item"
                android:minWidth="@dimen/custname_column_width"
                android:layout_width="@dimen/custname_column_width"
                android:layout_column="1"
                android:clickable="true"
                android:layout_margin="1dp"
                android:maxLines="1"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLength="40"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:paddingEnd="@dimen/_5sdp"
                android:ellipsize="end"
                android:background="@color/white"
                android:baselineAligned="false"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tv_description"
                style="@style/table_row_item"
                android:minWidth="@dimen/desc_column_width"
                android:layout_width="@dimen/desc_column_width"
                android:layout_column="3"
                android:clickable="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:minLines="2"
                android:layout_weight="1"
                android:gravity="center"
               android:layout_gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingEnd="@dimen/_5sdp"
                android:background="@color/white"
                android:baselineAligned="false"
                android:textAlignment="center" />



            <TextView
                android:id="@+id/tv_status"
                android:maxLines="2"
                android:layout_height="match_parent"
                android:clickable="true"
                android:maxLength="40"
                android:ellipsize="end"
                android:layout_weight="1"
                style="@style/table_row_item"
                android:minWidth="@dimen/status_column_width"
                android:layout_width="@dimen/status_column_width"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:textAlignment="center" />
        </TableRow>
    </TableLayout>

</LinearLayout>